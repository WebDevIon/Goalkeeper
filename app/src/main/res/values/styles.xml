<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#007503</item>
        <item name="colorButtonNormal">#6DC815</item>
    </style>
    <style name="TeamText" parent="@style/Base.TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#575757</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">10dp</item>
    </style>
    <style name="PointText" parent="@style/Base.TextAppearance.AppCompat">
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>
    <style name="FoulText" parent="@style/Base.TextAppearance.AppCompat">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    <style name="pointButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
    <style name="resetButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_marginBottom">32dp</item>
    </style>

</resources>
